<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="kunstmaan_chainrouter.chainrouter.class">Kunstmaan\ChainrouterBundle\Router\ChainRouterRouter</parameter>
        <parameter key="kunstmaan_chainrouter.chainrouter.alternativeclass">Kunstmaan\ChainrouterBundle\Router\AlternativeChainRouterRouter</parameter>
    </parameters>

    <services>
        <service id="kunstmaan_chainrouter.chainrouterexample" class="%kunstmaan_chainrouter.chainrouter.class%">
            <argument type="service" id="service_container" />
            <tag name="router" priority="100" />
        </service>

        <service id="kunstmaan_chainrouter.alternativechainrouterexample" class="%kunstmaan_chainrouter.chainrouter.alternativeclass%">
            <argument type="service" id="service_container" />
            <tag name="router" priority="200" />
        </service>
    </services>
</container>
